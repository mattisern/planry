<div class="widget text-widget" id="widget-<%= widget.id %>">
      <div class="widget-header">
          <input type="text"
              class="editable-header h2"
              name="name"
              value="<%= widget.state.name %>"
              onchange="javascript:updateWidget(<%= widget.id %>, this)" />
      </div>
      <textarea
          class="widget-content"
          name="text"
          onchange="javascript:updateWidget(<%= widget.id %>, this)"><%= widget.state.text %>
      </textarea>
</div>
